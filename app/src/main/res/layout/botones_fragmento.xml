<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:gravity="center"
        android:padding="8dp"
        tools:context=".Activities.MainActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="#000"
              android:textSize="30sp"
              android:textStyle="bold"
              android:drawableTop="@drawable/court"
              android:paddingBottom="40dp"
    android:text="Basketball Points"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        <Button
                android:id="@+id/bt_registrar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Registrar quipos"
                android:background="#000"
                android:drawableLeft="@drawable/team"
               android:padding="10dp"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="#fff"
                android:layout_margin="10dp"/>

        <Button
                android:id="@+id/bt_consultar"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Consultar partidos"
                android:background="#000"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:drawableLeft="@drawable/list"
                android:padding="10dp"
                android:layout_margin="10dp"/>


    </LinearLayout>


</LinearLayout>